{
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OnChain-DesignFusion",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["**", "$RESOURCE/*", "$HOME/.onChain/**"],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["http://**", "https://**", "ws://**", "wss://**"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": true
          },
          {
            "name": "reg",
            "cmd": "reg",
            "args": true
          },
          {
            "name": "binaries/swextension",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/swextension"],
      "icon": ["icons/onchain.png", "icons/favicon.ico"],
      "identifier": "com.ONCHAIN.build",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["Config.ini", "./lib", "./binaries","./SolidWorks.Interop.sldworks.dll"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "wix": {
          "language": "zh-CN",
          "bannerPath": "./banner.bmp",
          "dialogImagePath":"./dialogImage.bmp",
          "fragmentPaths": ["solidworks_addIn.wxs"],
          "componentRefs": ["MyFragmentRegistryEntries"]
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 347,
        "resizable": false,
        "title": "OnChain-DesignFusion",
        "width": 648,
        "url": "/login",
        "label": "Login",
        "decorations": false,
        "center": true,
        "visible":false
      },
      {
        "width": 300,
        "height": 150,
        "decorations": false,
        "center": true,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "visible":true
      }
    ],
    "systemTray": {
      "iconPath": "icons/onchain.png",
      "iconAsTemplate": true
    },
    "cli": {
      "description": "",
      "longDescription": "",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [
        {
          "name": "topic",
          "index": 1,
          "takesValue": true
        },
        {
          "name": "pid",
          "index": 2,
          "takesValue": true
        },
        {
          "name": "url",
          "index": 3,
          "takesValue": true
        }
      ],
      "subcommands": {
        "subcommand-name": {}
      }
    }
  }
}
