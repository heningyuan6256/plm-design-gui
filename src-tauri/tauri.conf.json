{
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OnChain PLM - 授权工具",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["**", "$RESOURCE/*", "$HOME/.onChain/**"],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "http": {
        "scope": ["http://**", "https://**", "ws://**", "wss://**"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "docker",
            "cmd": "docker"
          },
          {
            "name": "ssh",
            "cmd": "ssh",
            "args": true
          }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/onchain.png", "icons/favicon.ico"],
      "identifier": "com.ONCHAIN.build",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["Config.ini"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "wix": {
          "language": "zh-CN",
          "bannerPath": "./banner.png",
          "dialogImagePath": "./dialogImage.png"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 420,
        "resizable": false,
        "title": "OnChain PLM - 授权工具",
        "transparent": true,
        "width": 700,
        "url": "/center",
        "label": "Center",
        "decorations": false,
        "center": true,
        "visible": true,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/20x20托盘图标.png",

      "iconAsTemplate": true
    },
    "cli": {
      "description": "",
      "longDescription": "",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [],
      "subcommands": {
        "subcommand-name": {}
      }
    }
  }
}
